@{
    ViewData["Title"] = "Register Property";
}
 <form class="col-8">
     <h3>Register Property</h3>

     <div class="form-group row">
         <label class="col-4 col-form-label">Name:</label>
         <div class="col-8">
             <input id="txtName" type="text" class="form-control">
         </div>
     </div>

      <div class="form-group row">
         <label class="col-4 col-form-label">Room(s):</label>
         <div class="col-8">
             <input id="txtRoom" type="number" class="form-control">
         </div>
     </div>

      <div class="form-group row">
         <label class="col-4 col-form-label">Bathroom(s):</label>
         <div class="col-8">
             <input id="txtBath" type="number" class="form-control">
         </div>
     </div>

      <div class="form-group row">
         <label class="col-4 col-form-label">Price:</label>
         <div class="col-8">
             <input id="txtPrice" type="number" class="form-control">
         </div>
     </div>

      <div class="form-group row">
         <label class="col-4 col-form-label">Area (sqft.):</label>
         <div class="col-8">
             <input id="txtArea" type="number" class="form-control">
         </div>
     </div>

      <div class="form-group row">
         <label class="col-4 col-form-label">Image name:</label>
         <div class="col-8">
             <input id="txtImage" type="text" class="form-control">
         </div>
     </div>

      <div class="form-group row">
         <label class="col-4 col-form-label">Description:</label>
         <div class="col-8">
             <textarea id="txtDescription" type="number" class="form-control"></textarea>
         </div>
     </div>

     <div class="form-group row">
         <div class="col-8 offset-4">
             <button type="button" id="btnSave" class="btn btn-info"> Save Property</button>
         </div>
     </div>

</form>


@section Scripts {
    <script src="/js/register.js"></script>
}